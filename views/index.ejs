<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css\styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=PT+Sans:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.sandbox.google.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    
    <title>My App</title>
</head>
<body>
    <header>
        <div id="img_user">
            <img src="img\avatar.png">
        </div>
        <div id="welcome">
            Welcome
            <div id="user_name">
                Ronald
            </div>
        </div>
        <div id="quote"></div>
        <div id="date"></div>            
    </header>
    <div id="wrapper">
        <div id="summary">
            <h1>Summary</h1>
                <table>
                    <tr>
                        <td>In process</td>
                        <td>20</td>
                    </tr>
                    <tr>
                        <td id="completed">Completed</td>
                        <td>30</td>
                    </tr>
                </table>
            <div id="add_task" style="cursor: pointer;" onclick="window.location='add_task.ejs';">
                <span class="material-symbols-rounded">
                    add_circle
                </span>
                <p>Add task</p>
            </div>
        </div>
        <div id="today">
            <%let date = new Date();

            let fDate
            if (date.getMonth() <= 9) {
                fDate = `${date.getFullYear()}-0${date.getMonth()+01}-${date.getDate()}`; 
            }%>

            <div id="today_h">
                <span class="material-symbols-rounded">
                    today
                </span>
                <h1>Today</h1>
            </div>
            <%for(let i = 0; i < tasks.length; i++) {%>
                <% if (tasks[i].due_date == fDate) {%>
                <div class="content_task">
                    

                   
                    <% if (tasks[i].task_type==1) { %>
                        <div class="type_c" style="background-color:red ;"></div>
                    <% }  else {%>
                        <div class="type_c" style="background-color:rgb(30, 127, 206) ;"></div>
                        <%} %>
                    
               
                    <div class="header_c">
                        <p><%= tasks[i].task_name%></p>                    
                    </div>
                    <p class="percentage_c">50%</p>
                    <div class="my_progress">
                        <div class="my_bar" style=" width: 50%; height: 10px; background-color:#58b947; border-radius: 6px;"></div>
                        
                    </div>
                    
                    <div class="details_c">
                        <span class="material-symbols-rounded">
                            event_available
                        </span>
                        <P><%= tasks[i].due_date%></P>
                        <span class="material-symbols-rounded">
                            format_list_bulleted
                        </span>
                        <P><%= tasks[i].sub_task.length%></P>
                        <span class="material-symbols-rounded">
                            task_alt
                        </span>
                        <P>8</P>
                    </div>
                </div>
            <%} %>
            <%}%>
        </div>
        <div id="in_progress">
            <div id="progress_h">
                <span class="material-symbols-rounded">
                    autorenew
                </span>
                <h1>In progress</h1>
            </div>
            <%for(let i = 0; i < tasks.length; i++) {%>
                <% if (tasks[i].due_date != fDate) {%>
                <div class="content_task">
                    

                   
                    <% if (tasks[i].task_type==1) { %>
                        <div class="type_c" style="background-color:red ;"></div>
                    <% }  else {%>
                        <div class="type_c" style="background-color:rgb(30, 127, 206) ;"></div>
                        <%} %>
                    
               
                    <div class="header_c">
                        <p><%= tasks[i].task_name%></p>                    
                    </div>
                    <p class="percentage_c">50%</p>
                    <div class="my_progress">
                        <div class="my_bar" style=" width: 50%; height: 10px; background-color:#58b947; border-radius: 6px;"></div>
                        
                    </div>
                    
                    <div class="details_c">
                        <span class="material-symbols-rounded">
                            event_available
                        </span>
                        <P><%= tasks[i].due_date%></P>
                        <span class="material-symbols-rounded">
                            format_list_bulleted
                        </span>
                        <P><%= tasks[i].sub_task.length%></P>
                        <span class="material-symbols-rounded">
                            task_alt
                        </span>
                        <P>8</P>
                    </div>
                </div>
            <%} %>
            <%}%>
        </div>
        <div id="completed">
            <div id="completed_h">
                <span class="material-symbols-rounded">
                    check_circle
                </span>
                <h1>Completed</h1>
            </div>
     
        </div>
        
    </div>
    
    <script src="script.js"></script>
</body>
</html>